<h1>Products</h1>
<ul>
  <% products.forEach(product => { %>
    <li>
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
      <p>$<%= product.price %></p>
      <form action="/add-to-cart/<%= product._id %>" method="POST">
        <button type="submit">Add to Cart</button>
      </form>
    </li>
  <% }) %>
</ul>

<a href="/cart">View Cart</a>
